@model SistemaCadeteria.ViewModels.CadeteViewModel;

@{
    ViewData["Title"] = "Pedidos asignados";
}

<h1>Pedidos asignados a @Model.Nombre</h1>

@if (Model.Pedidos.Count() == 0)
{
    <p>El cadete no posee pedidos asignados</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Estado del pedido</th>
                <th>Observaciones</th>
                <th>Modificar estado</th>
                <th>Cambiar de cadete</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pedido in Model.Pedidos)
            {
                <tr>
                    <td>@pedido.Costumer.Nombre</td>
                    <td>@pedido.Estado</td>
                    <td>@pedido.Observaciones</td>
                    <td><a href="/Pedido/ModificarEstado/?idPedido=@pedido.NroPedido">Modificar</a></td>
                    <td><a href="/Pedido/CambiarCadete/?idPedido=@pedido.NroPedido&idCadete=@Model.Id">Cambiar</a></td>
                    <td><a href="/Pedido/Editar/@pedido.NroPedido">Editar</a></td>
                    <td>@Html.ActionLink("Eliminar", "Borrar", "Pedido", new
                {id = pedido.NroPedido}, new {onclick = $"return confirm('Â¿Seguro que desea eliminar este pedido?');"})
                    </td>
                </tr>
            }
        </tbody>
    </table>
}