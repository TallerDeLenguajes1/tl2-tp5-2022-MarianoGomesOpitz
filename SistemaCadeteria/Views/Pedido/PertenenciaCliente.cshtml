@{
    ViewData["Title"] = "Dependecia Cliente";
}

@using SistemaCadeteria.ViewModels;
@model List<ClienteViewModel>;

<a asp-controller="Pedido" asp-action="Index">Cancelar</a>

@if (Model.Count() == 0 || Model.Count() >= 15)
{
    <p>No hay clientes disponibles</p>
}
else
{
    @using (Html.BeginForm("Crear", "Pedido"))
    {
        <p>Clientes disponibles</p>
        @foreach (var cliente in Model)
        {
            <input type="radio" name="IdCliente" value="@cliente.Id">
            <label for="IdCliente">@cliente.Nombre</label><br>
        }


        <button>Asignar</button>
    }
}
<br>
<a asp-controller="Home" asp-action="CerrarSesion">Cerrar sesion</a>